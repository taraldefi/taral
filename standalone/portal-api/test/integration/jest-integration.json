{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../",
  "testEnvironment": "node",
  "testRegex": ".int-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "modulePaths": ["."],
  
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1",
    "@modules/(.*)": "<rootDir>/../modules/$1",
    "@libs/(.*)": "<rootDir>/../../libs/$1"
  }
}
