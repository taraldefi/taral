{
    "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "lib": ["ESNext"],
      "skipLibCheck": true,
  
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
  
      "strict": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "baseUrl": "./", // This must be set if you want to use "paths"
      "paths": {
        "vitest-helpers/*": ["../../node_modules/@hirosystems/clarinet-sdk/vitest-helpers/src/*"] // Adjust this as necessary
      }
    },
    "include": [
        "**/*",
        "../../node_modules/@hirosystems/clarinet-sdk/vitest-helpers/src/**/*", "unit-tests"
    ]
  }
  